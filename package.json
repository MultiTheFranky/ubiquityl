{
  "name": "pterodactyl-udm-sync",
  "version": "0.1.0",
  "private": true,
  "description": "Synchronises Pterodactyl allocation changes with Ubiquiti UDM port forwarding rules.",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node --transpile-only src/main.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "axios": "^1.7.4",
    "dotenv": "^17.0.0",
    "tough-cookie": "^6.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.0",
    "lefthook": "^1.6.12",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vitest": "^4.0.0"
  }
}
